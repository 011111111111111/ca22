# Digital Wardrobe Application Environment Variables
NODE_ENV={{ node_env | default('production') }}
PORT={{ app_port | default(3000) }}

# Database Configuration
MONGODB_URI={{ mongodb_connection | default('mongodb://localhost:27017/Digital_Wardrobe') }}

# AWS S3 Configuration
AWS_REGION={{ aws_region | default('ap-south-1') }}
S3_BUCKET_NAME={{ s3_bucket | default('digital-wardrobe-storage') }}

# Application URLs
APP_URL=http://localhost:{{ app_port | default(3000) }}
API_URL=http://localhost:{{ app_port | default(3000) }}/api

# Security
JWT_SECRET={{ jwt_secret | default('your-secret-key-change-this') }}
SESSION_SECRET={{ session_secret | default('your-session-secret-change-this') }}

# Logging
LOG_LEVEL={{ log_level | default('info') }}

